<section class="vh-100 gradient-custom">
    <div class="container py-6 h-100">
      <div class="row d-flex justify-content-center align-items-center h-90">
        <div class="col-12 col-md-8 col-lg-6 col-xl-6">
          <div class="card bg-dark text-white" style="border-radius: 1rem;">
            <div class="card-body p-5 text-center">
            <!-- <center >
            <img src="https://i.postimg.cc/gcKQJqW0/Sz-1-11.png"
            height=55% width=15%>
            </center> -->
              <div class="mb-md-4 mt-md-4 pb-4">
                <h2 class="fw-bold mb-3 text-uppercase">Login</h2>
                <p class="text-white-50 mb-5">Please enter your email and password!</p>
                <center>
                  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                    <div class="form-outline form-white mb-4">
                      <%= f.label :email, class: "text-white-50 mb-1" %>
                      <%= f.email_field :email, class: "form-control form-control-sm", autofocus: true, autocomplete: "email", placeholder: "Enter Your Email" %>
                    </div>

                    <div class="form-outline form-white mb-5">
                      <%= f.label :password, class: "text-white-50 mb-1" %>
                      <%= f.password_field :password, class: "form-control form-control-sm", autocomplete: "current-password", placeholder: "Enter Your Password" %>
                    </div>

                    <% if devise_mapping.rememberable? %>
                      <div class="form-outline form-white mb-5">
                        <%= f.check_box :remember_me, class: "form-check-input" %>
                        <%= f.label :remember_me, class: "form-check-label remember-me-label text-white-50" %>
                      </div>
                    <% end %>

                    <!-- <div class="btn btn-outline-light btn-md px-5"> -->
                      <%= f.submit "Log in", class: "btn btn-outline-light btn-md px-5 cust-btn" %>
                    <!-- </div> -->
                  <% end %>
                </center>
                <div class="text-white-50 fw-bold mg-2">
                  <%= render "devise/shared/links" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
