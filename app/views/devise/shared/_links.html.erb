<style type="text/css">
  .custom-add-btn {
    max-width: 80px;
    height: 35px; 
    font-size: 15px;
    font-weight: 500;
    background-color: white;
    border: none;
    border-radius: 5px;s
    color: black;
/*    font-weight: bold;*/
    padding: 5px 0;
    text-align: center;
    display: block;
    transition: background-color 0.3s, color 0.3s, border-color 0.3s; 
  }
  .cust-btn {
    background-color: #808080;
    max-width: 40%;
    height: 35px; 
    border-radius: 5px !important; 

  }

  .custom-add-btn:hover {
    height: 35px;
    background-color: grey;
    color: white; 
    border-color: black;
  }
</style>
</br>
<% if devise_mapping.omniauthable? && controller_name != 'sessions' %>
  <% resource_class.omniauth_providers.each do |provider| %>
    <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "btn btn-dark btn-block mb-3 cust-btn" %>
  <% end %>
<% end %>

<% if controller_name != 'sessions' %>
  <%= link_to "Log in", new_session_path(resource_name), class: "btn btn-dark btn-block mb-3 custom-btn" %>
<% end %>

<% if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-dark btn-block mb-3 custom-btn" %>
<% end %>


<% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Forgot your password?", new_password_path(resource_name), class: "btn btn-link btn-block mb-3 " %>
<% end %>

<% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_user_confirmation_path(resource_name), class: "btn btn-link btn-block mb-3 custom-btn" %>
<% end %>

<% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "btn btn-link btn-block mb-3 custom-btn" %>
<% end %>


